@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CustomerDetails</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreetAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickUpDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickUpDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BalanceDue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BalanceDue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OneTimePickUp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OneTimePickUp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SuspensionStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SuspensionStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SuspensionEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SuspensionEndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.isPickedUp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isPickedUp)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="ConfirmPickUp" asp-route-id="@Model.Id">Confirm Pick Up</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="map" style="height:400px; width: 400px;">
            
            <script>
                let map;
                function initMap() {
                    const myLatLng = { lat: @Model.latitude, lng: @Model.longitude};
                    const map = new google.maps.Map(document.getElementById("map"), {
                        zoom: 15,
                        center: myLatLng,
                    });
                    new google.maps.Marker({
                        position: myLatLng,
                        map,
                        title: "Pickup Location",
                    });
                }

            </script>
            <script defer
                    src='https://maps.googleapis.com/maps/api/js?key=@ViewData["GOOGLE_API_KEY"]&callback=initMap'>
            </script>
            

        </div>
    </div>
</div>

